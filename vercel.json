{
  "builds": [
    {
      "src": "api/process-vowels.py", 
      "use": "@vercel/python"
    },
    {
      "src": "index.html",
      "use": "@vercel/static-build"
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/process-vowels.py"
    },
    {
      "src": "/",
      "dest": "/index.html" 
    },
    {
      "src": "/(.*)",
      "dest": "/$1" 
    }
  ]
}
