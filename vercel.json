{
  "builds": [
    {
      "src": "api/process-vowels.py",
      "use": "@vercel/python"
    },
    {
      "src": "**/*.{html,css,js}",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "echo 'No dedicated static build process needed, just serving files.'"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/process-vowels.py"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "outputDirectory": "."
}
