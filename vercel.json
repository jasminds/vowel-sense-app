{
  "builds": [
    {
      "src": "api/process-vowels.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/process-vowels.py"
    },
    {
      "src": "/(.*)", // Ini akan menangani semua permintaan, termasuk "/" dan "/index.html", serta aset statis lainnya dari root
      "dest": "/$1"
    }
  ]
}
